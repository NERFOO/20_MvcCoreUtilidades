
<h1>Vistas parciales Ajax</h1>

@section Scripts{
    <script>
        $(document).ready(function() {
            $("#botonCargarCoches").click(function() {
                $("#contenido").load("/Coches/_CochesPartial");
            })

            $("#idBotonBusarCoche").click(function() {
                var idCoche = $("#cajaIdCoche").val();

                //Controller/Action?id=1
                //Controller/Action?id=1&id=3
                //Controller/Action/1 ESTO SOLO SI SE LLAMA {ID} EL PARAMETRO POR EL PROGRAM DEL PATTERN
                var request = "/Coches/_DetailsCoches?idCoche=" + idCoche;

                $("#contenidoDetails").load(request);

            })
        })
    </script>
}

<label>Introduzca Id:</label>
<input type="text" name="idCoche" id="cajaIdCoche" class="form-control" />

<button id="idBotonBusarCoche" class="btn btn-primary">Buscar coche</button>

<div id="contenidoDetails" style="background-color: lightcoral">

</div>

<button id="botonCargarCoches" class="btn btn-danger">Cargar coches con Ajax</button>

<div id="contenido" style="background-color: lightgreen">

</div>
