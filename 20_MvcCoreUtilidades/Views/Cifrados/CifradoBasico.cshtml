

<h1>Cifrado basico</h1>

<form method="post">
    <label>Contenido a cifrar</label>
    <input type="text" name="contenido" class="form-control" />

    <label>Resultado</label>
    <textarea name="resultado" rows="5" class="form-control">@ViewData["TEXTOCIFRADO"]</textarea>

    <button type="submit" class="btn btn-primary" name="accion" value="cifrar">Cifrar contenido</button>

    <button type="submit" class="btn btn-secondary" name="accion" value="comparar">Comparar contenido</button>
</form>


<h2 style="color:blue">@ViewData["MENSAJE"]</h2>

